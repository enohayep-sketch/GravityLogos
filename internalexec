-- Eazyy Internal Executor Script
-- Created for Eazyy / EazySploit
-- Features: Modern GUI, Draggable, Loadstring Execution, Toggle with Insert

local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

-- Create GUI
local InternalExecutor = Instance.new("ScreenGui")
InternalExecutor.Name = "InternalExecutor"
InternalExecutor.Parent = CoreGui
InternalExecutor.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
InternalExecutor.ResetOnSpawn = false

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Parent = InternalExecutor
MainFrame.BackgroundColor3 = Color3.fromRGB(24, 24, 24)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.Size = UDim2.new(0, 400, 0, 300)

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 8)
UICorner.Parent = MainFrame

local UIStroke = Instance.new("UIStroke")
UIStroke.Color = Color3.fromRGB(45, 45, 45)
UIStroke.Thickness = 2
UIStroke.Parent = MainFrame

-- Top Bar
local TopBar = Instance.new("Frame")
TopBar.Name = "TopBar"
TopBar.Parent = MainFrame
TopBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TopBar.BorderSizePixel = 0
TopBar.Size = UDim2.new(1, 0, 0, 35)

local TopCorner = Instance.new("UICorner")
TopCorner.CornerRadius = UDim.new(0, 8)
TopCorner.Parent = TopBar

local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Parent = TopBar
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0.05, 0, 0, 0)
Title.Size = UDim2.new(0.9, 0, 1, 0)
Title.Font = Enum.Font.GothamBold
Title.Text = "EAZYY INTERNAL EXECUTOR"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 14
Title.TextXAlignment = Enum.TextXAlignment.Left

-- Editor Area
local EditorContainer = Instance.new("Frame")
EditorContainer.Name = "EditorContainer"
EditorContainer.Parent = MainFrame
EditorContainer.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
EditorContainer.BorderSizePixel = 0
EditorContainer.Position = UDim2.new(0.025, 0, 0.15, 0)
EditorContainer.Size = UDim2.new(0.95, 0, 0, 200)

local EditorCorner = Instance.new("UICorner")
EditorCorner.CornerRadius = UDim.new(0, 4)
EditorCorner.Parent = EditorContainer

local Editor = Instance.new("TextBox")
Editor.Name = "Editor"
Editor.Parent = EditorContainer
Editor.BackgroundTransparency = 1
Editor.Position = UDim2.new(0.02, 0, 0.02, 0)
Editor.Size = UDim2.new(0.96, 0, 0.96, 0)
Editor.ClearTextOnFocus = false
Editor.Font = Enum.Font.Code
Editor.MultiLine = true
Editor.PlaceholderText = "-- Paste your script here..."
Editor.Text = ""
Editor.TextColor3 = Color3.fromRGB(200, 200, 200)
Editor.TextSize = 14
Editor.TextXAlignment = Enum.TextXAlignment.Left
Editor.TextYAlignment = Enum.TextYAlignment.Top

-- Buttons Container
local ButtonsPanel = Instance.new("Frame")
ButtonsPanel.Name = "ButtonsPanel"
ButtonsPanel.Parent = MainFrame
ButtonsPanel.BackgroundTransparency = 1
ButtonsPanel.Position = UDim2.new(0.025, 0, 0.84, 0)
ButtonsPanel.Size = UDim2.new(0.95, 0, 0, 40)

local function CreateButton(name, text, pos, color)
    local btn = Instance.new("TextButton")
    btn.Name = name
    btn.Parent = ButtonsPanel
    btn.BackgroundColor3 = color
    btn.BorderSizePixel = 0
    btn.Position = pos
    btn.Size = UDim2.new(0.48, 0, 0.9, 0)
    btn.Font = Enum.Font.GothamBold
    btn.Text = text
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.TextSize = 14
    btn.AutoButtonColor = true
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 4)
    btnCorner.Parent = btn
    
    return btn
end

local ExecuteBtn = CreateButton("Execute", "EXECUTE", UDim2.new(0, 0, 0, 0), Color3.fromRGB(40, 150, 40))
local ClearBtn = CreateButton("Clear", "CLEAR", UDim2.new(0.52, 0, 0, 0), Color3.fromRGB(150, 40, 40))

-- Dragging Logic
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TopBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)

-- Functionality
ExecuteBtn.MouseButton1Click:Connect(function()
    local code = Editor.Text
    if code ~= "" then
        local func, err = loadstring(code)
        if func then
            task.spawn(func)
        else
            warn("Execution Error: " .. tostring(err))
        end
    end
end)

ClearBtn.MouseButton1Click:Connect(function()
    Editor.Text = ""
end)

-- Toggle Logic
local visible = false
MainFrame.Visible = visible
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.Insert then
        visible = not visible
        MainFrame.Visible = visible
    end
end)

-- Animations
local function HoverEffect(btn, enterColor, leaveColor)
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = enterColor}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = leaveColor}):Play()
    end)
end

HoverEffect(ExecuteBtn, Color3.fromRGB(50, 180, 50), Color3.fromRGB(40, 150, 40))
HoverEffect(ClearBtn, Color3.fromRGB(180, 50, 50), Color3.fromRGB(150, 40, 40))

print("Eazyy Internal Executor Loaded! Press Insert to toggle.")
